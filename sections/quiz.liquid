{% assign index = "now"  | date: "%N" | modulo: 3 | downcase %}

<section class="quiz__container">
    {% if section.settings.format_selection=='classic' %}
     <iframe src="https://www.fyrebox.com/quizzes/{{ section.settings.slug | default: 'french-language-test_appKd8Xjd4'}}" allowfullscreen="true" frameborder="0" style="width: 1px; min-width: 100%;" height="400px"  allowTransparency="true" scrolling="no"></iframe>
    {% elsif section.settings.format_selection == 'conversation' %}
     <iframe src="https://www.fyrebox.com/bot/{{ section.settings.slug | default: 'french-language-test_appKd8Xjd4' }}" allowfullscreen="true" frameborder="0" style="width: 1px; min-width: 100%;height:450px" allowtransparency="true" scrolling="yes"></iframe>
    {% endif %}
</section>

{% style %}

  .quiz__container {
    position: relative;
    width: 100%;
    margin: 0 auto;
    padding: 3rem 1rem;

    @media screen and (min-width: 768px) {
      max-width: 768px;
    }

    @media screen and (min-width: 992px) {
      max-width: 992px;
    }

    @media screen and (min-width: 1200px) {
      max-width: 1200px;
    }
  }

{% endstyle %}

{% schema %}
{
  "label":"Fyrebox Quiz",
  "description":"This the Fyrebox Quiz app. For more details, visit our the article on our <a href='https://www.fyrebox.guru/integrating-with-others/how-use-fyrebox-thinkific'>documentation website</a>. ",
  "previewImageUrl":"https://assets.fyrebox.com/image/upload/v1669961469/integrations/thinkificExtPreview.png",
  "previewDescription":"Display a Fyrebox quiz",
  "settings":[
    {
      "label":"Format",
      "settings":[
        {
          "type":"select",
          "id":"format_selection",
          "label":"",
          "description":"",
          "default":"classic",
          "options":[
            {
              "value":"classic",
              "label":"Classic"
            },
            {
              "value":"conversation",
              "label":"Conversation"
            }
          ]
        }
      ]
    },
    {
      "label":"Quiz Slug",
      "settings":[
        {
          "type":"text",
          "id":"slug",
          "label":"",
          "description":"The quiz slug is on the "Share/Embed" page"
        }
      ]
    }
  ]
}
{% endschema %}
